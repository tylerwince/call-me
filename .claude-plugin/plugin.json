{
  "name": "textme",
  "version": "1.0.0",
  "description": "Claude texts you via iMessage, Telegram, or Slack when it needs your input or wants to report progress",
  "author": {
    "name": "ZeframLou",
    "url": "https://github.com/ZeframLou"
  },
  "repository": "https://github.com/ZeframLou/call-me",
  "license": "MIT",
  "keywords": ["text", "messaging", "imessage", "telegram", "slack", "input"],
  "skills": "./skills",
  "mcpServers": {
    "textme": {
      "command": "bun",
      "args": ["run", "--cwd", "${CLAUDE_PLUGIN_ROOT}/server", "start"],
      "env": {
        "TEXTME_PROVIDER": "${TEXTME_PROVIDER:-imessage}",
        "TEXTME_IMESSAGE_RECIPIENT": "${TEXTME_IMESSAGE_RECIPIENT}",
        "TEXTME_TELEGRAM_BOT_TOKEN": "${TEXTME_TELEGRAM_BOT_TOKEN}",
        "TEXTME_TELEGRAM_CHAT_ID": "${TEXTME_TELEGRAM_CHAT_ID}",
        "TEXTME_SLACK_BOT_TOKEN": "${TEXTME_SLACK_BOT_TOKEN}",
        "TEXTME_SLACK_APP_TOKEN": "${TEXTME_SLACK_APP_TOKEN}",
        "TEXTME_SLACK_CHANNEL": "${TEXTME_SLACK_CHANNEL}",
        "TEXTME_MESSAGE_TIMEOUT_MS": "${TEXTME_MESSAGE_TIMEOUT_MS:-300000}"
      }
    }
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "SILENTLY evaluate if you should message the user. ONLY use send_message if you completed significant work and need to discuss next steps, or are genuinely blocked. Do NOT output any text - either message or do nothing."
          }
        ]
      }
    ]
  }
}
